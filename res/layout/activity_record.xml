<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecordActivity" >

    <EditText
        android:id="@+id/textXValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="numberSigned" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/textYValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textXValue"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/textZValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textYValue"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/textTimeElapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textZValue"
        android:layout_below="@+id/textZValue"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textTimeElapsed"
        android:layout_alignRight="@+id/textTimeElapsed"
        android:layout_below="@+id/textTimeElapsed"
        android:layout_marginTop="50dp"
        android:text="Button" />

</RelativeLayout>